name: Testing flake

on:
  push:
    branches:
      - '**'
  pull_request:
    branches:
      - '**'

jobs:
  flake-check:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Install Nix
        uses: cachix/install-nix-action@v25

      - name: Run nix flake check
        run: nix flake check
